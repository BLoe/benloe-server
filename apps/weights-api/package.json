{
  "name": "weights-api",
  "version": "1.0.0",
  "description": "Weight tracking API with user authentication",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed",
    "postinstall": "npm run db:generate"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "cookie-parser": "^1.4.6",
    "@prisma/client": "^5.0.0",
    "prisma": "^5.0.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/cors": "^2.8.13",
    "@types/cookie-parser": "^1.4.3",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0"
  }
}
